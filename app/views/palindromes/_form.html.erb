<%= form_with(model: palindrome) do |form| %>

  <% if palindrome.errors.any? %>
    <div class="container">
      <div class="alert alert-success" role="alert">
        <h4 class="alert-heading fs-3"> Ошибка при вводе! </h4>
        <p class="fs-5"> Пожалуйста, проверьте ввод </p>
        <hr>
        <% palindrome.errors[:number].each do |error| %>
          <p class="mb-0 fs-5"> <%= error %> </p>
        <% end %>
      </div>
    </div>
  <% end %>
    
  <div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
      <div class="input-group mb-3">
        <input type="number" class="form-control" id="palindrome_number" name="palindrome[number]" placeholder="Введите число" pattern="[0-9]+" min="0">
        <div class="input-group-append">
          <button class="btn btn-outline-primary" type="submit" name="commit" value="Create Palindrome" data-disable-with="Create Palindrome"> Ввод </button>
        </div>
      </div>
    </div>
  </div>

<% end %>
